{% extends 'layout.html.twig' %}

{% block title %}Liste des PFEs{% endblock %}
{% block PageTitle %}
    Liste des PFEs
{% endblock %}
{% block body %}
    <div class="row">
        {% for PFE in listePFE %}
            <div class="card text-white bg-{% if(loop.index is odd) %}info{% else %}warning{% endif %} m-2 col-3"
                 style="max-width: 18rem;">
                <div class="card-header">{{ PFE.title }}</div>
                <div class="card-body">
                    <h5 class="card-title"> Etudiant : {{ PFE.student }}</h5>
                    <h6 class="card-text">Title : {{ PFE.title }}</h6>
                    <p class="card-text">Entreprise : {{ PFE.entreprise }}</p>

                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
